---
import { getProducts } from '../lib/firebase';

const products = await getProducts();
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Productos</title>

    <!-- Cargar Font Awesome para los íconos -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      /* Estilos globales */
      body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
      }

      h1 {
        text-align: center;
        color: #2c3e50;
        padding: 20px;
        background-color: #2980b9;
        color: white;
        margin: 0;
      }

      /* Contenedor de los productos */
      .product-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
        padding: 20px;
      }

      /* Estilo de cada producto */
      .product-item {
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 15px;
        text-align: center;
        transition: transform 0.3s ease;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .product-item:hover {
        transform: translateY(-10px);
      }

      .product-item img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
      }

      h2 {
        color: #2980b9;
        font-size: 1.5em;
        margin-top: 15px;
      }

      p {
        color: #7f8c8d;
        font-size: 1em;
        margin: 10px 0;
        flex-grow: 1; /* Para que el contenido de la descripción ocupe el espacio disponible */
      }

      .price {
        font-size: 1.2em;
        color: #e74c3c;
        font-weight: bold;
        margin-bottom: 10px;
      }

      /* Estilo para el botón de agregar al carrito */
      .add-to-cart-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #2980b9;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1em;
        margin-top: 20px; /* Ajustado para separar el botón del precio */
        transition: background-color 0.3s;
      }

      .add-to-cart-btn:hover {
        background-color: #1d5d8f;
      }

      .add-to-cart-btn i {
        margin-right: 8px;
      }

      /* Responsividad */
      @media (max-width: 768px) {
        h1 {
          font-size: 1.8em;
        }

        .product-item {
          padding: 10px;
        }

        .price {
          font-size: 1.1em;
        }

        .add-to-cart-btn {
          font-size: 0.9em;
          padding: 8px 16px;
        }
      }
    </style>
  </head>
  <body>
    <h1>PRODUCTOS ELECTRONICOS</h1>
    <div class="product-list">
      <!-- Se muestra la lista de productos con el botón de agregar -->
      <!-- Este código será procesado por JS -->
      {products.map(product => (
        <div class="product-item">
          <img src={product.imagen} alt={product.nombre} />
          <h2>{product.nombre}</h2>
          <p>{product.descripcion1}</p>
          <p class="price">S/.{product.precio}</p>
          <!-- Botón para agregar al carrito -->
          <button class="add-to-cart-btn">
            <i class="fas fa-shopping-cart"></i> Agregar al carrito
          </button>
        </div>
      ))}
    </div>
    
  </body>
</html>


