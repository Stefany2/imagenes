---
// Obtener el ID del producto de la URL
const { id } = Astro.params;

// Aquí, debes cargar los detalles del producto según el ID. 
// Puedes simular esto con un objeto estático o hacer una solicitud a una API.
const products = [
  { id: 1, nombre: 'Producto 1', descripcion: 'Descripción del Producto 1', precio: 100, imagen: '/images/producto1.jpg' },
  { id: 2, nombre: 'Producto 2', descripcion: 'Descripción del Producto 2', precio: 200, imagen: '/images/producto2.jpg' },
  // Agrega más productos si es necesario
];

// Buscar el producto por ID
const product = products.find(p => p.id === parseInt(id));

// Si el producto no existe, puedes manejar el caso (por ejemplo, redirigiendo o mostrando un error)
if (!product) {
  return <div>Producto no encontrado.</div>;
}
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{product.nombre} - Detalles</title>

    <style>
      /* Estilos similares a los de la página principal */
      body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
      }

      h1 {
        text-align: center;
        color: #2c3e50;
        padding: 20px;
        background-color: #2980b9;
        color: white;
        margin: 0;
      }

      .product-details {
        max-width: 800px;
        margin: 20px auto;
        background-color: white;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      img {
        max-width: 100%;
        border-radius: 8px;
        display: block;
        margin: 0 auto;
      }

      h2 {
        color: #2980b9;
        font-size: 2em;
        margin-top: 20px;
        text-align: center;
      }

      p {
        color: #7f8c8d;
        font-size: 1.2em;
        text-align: center;
      }

      .price {
        font-size: 1.5em;
        color: #e74c3c;
        font-weight: bold;
        text-align: center;
      }

      .back-btn {
        display: block;
        margin-top: 20px;
        text-align: center;
        background-color: #2980b9;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        font-size: 1em;
      }

      .back-btn:hover {
        background-color: #1d5d8f;
      }
    </style>
  </head>
  <body>
    <h1>Detalles del Producto</h1>
    <div class="product-details">
      <img src={product.imagen} alt={product.nombre} />
      <h2>{product.nombre}</h2>
      <p>{product.descripcion}</p>
      <p class="price">S/. {product.precio}</p>

      <a href="/" class="back-btn">Volver a la tienda</a>
    </div>
  </body>
</html>
